#!/groovy

WorkPath = '/var/tomcat-test'

CompilePackagePath = '/var/package'

PublishPath = '/var/publish'

pipeline {
    agent {
      node {
          label "host-vm"
          customWorkspace "${WorkPath}"
      }
    }
    stages {
        stage('Init') {
            steps {
                script {
                    out = sh(script: "[ -f $CompilePackagePath/tomcat.tar ]  && echo 'true' || echo 'false'", returnStdout: true)
                    if(out == "true") {
                        sh "cd $CompilePackagePath && docker load < tomcat.tar"
                    } else {
                        println "tomcat tar is not exist in package path"
                        sh "exit 1"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                 ansiblePlaybook(
                    playbook: 'ansible/deploy.yml'
                 )
            }
        }
        stage('Test') {
            steps {
                echo "Do some test"
            }
        }
        stage('Publish') {
            steps {
                sh "mkdir -p $PublishPath"
                sh "cp $CompilePackagePath/tomcat.tar $PublishPath/"
            }
        }
        stage('TearDown') {
            steps{
                ansiblePlaybook(
                    playbook: 'ansible/rollback.yml'
                )
                sh "docker rmi -f tomcat:my-latest"
            }
        }
    }
}
